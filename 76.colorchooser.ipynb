   "source": [
    "from tkinter import *\n",
    "from tkinter import colorchooser\n",
    "\n",
    "def click():\n",
    "    color = colorchooser.askcolor()\n",
    "    colorHex = color[1]\n",
    "    window.config(bg=colorHex)\n",
    "\n",
    "window = Tk()\n",
    "window.geometry(\"420x420\")\n",
    "button = Button(text='click me',command=click)\n",
    "button.pack()\n",
    "window.mainloop()"
   ]
  }
